<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<script>
    var pytanie = prompt('Powidz co chcesz zrobic: 1-dodawanie, 2-odejmowanie,3-mnozenie,4-dzielenie')*1
var l1 = prompt('Podaj 1 liczbe')*1
var l2 = prompt('Podaj 2 liczbe')*1
var suma;

const dodawanie = function(l1,l2){

    suma=l1+l2;

document.write(suma)
}
const odejmowanie = function(l1,l2){

suma=l1-l2;

document.write(suma)
}
const mnozenie = function(l1,l2){

suma=l1*l2;

document.write(suma)
}
const dzielenie = function(l1,l2){

suma=l1/l2;

document.write(suma)
}


switch(pytanie){
case 1:
    dodawanie(l1,l2);
    break;
case 2:
    odejmowanie(l1,l2);
    break;

case 3:
    mnozenie(l1,l2);
    break;

case 4:
    dzielenie(l1,l2);
    break; 




}
</script>
</body>
</html>
